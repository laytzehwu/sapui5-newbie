<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="newbies.controller.welcome" displayBlock="true">
	<App>
		<pages><Page title="{i18n>title}">
				<content>
					
					<VBox width="100%" direction="Column" id="__vbox0">
					    <items>
					        <Button xmlns="sap.m" text="Show my name" width="100px" press="doShowMyName"/>
					        <Text xmlns="sap.m" text="{user>/firstName}" id="__text4"/>
					    </items>
					</VBox>
					
					<VBox width="100%" direction="Column" id="__vbox1">
					    <items>
					        <Input xmlns="sap.m" value="{w>/city}" width="50%"/>
					        <Button xmlns="sap.m" text="Show city info" width="100px" press="getCityDetail"/>
					        <Text xmlns="sap.m" text="{w>/weather}"/>
					    </items>
					</VBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>